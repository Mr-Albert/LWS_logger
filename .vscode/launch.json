    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ launch and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/helloWorld.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}